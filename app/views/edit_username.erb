<main class="eds__main">
  <left-border class="left__border"></left-border>
  <top-border class="top__border"></top-border>
  <div class="form__space">
    <form class="form" action="/user/<%= session[:user_id] %>/settings/username/edit" method="post">

      <input type="text" placeholder="Username" name="username"/>

      <input type="text" placeholder="Confirm Username" name="username_confirmation"/>

      <button type="submit">Save</button>

    </form>
  </div>
  <right-border class="right__border"></right-border>
  <bottom-border class="bottom__border"></bottom-border>
</main>
