
<script src="/javascripts/landing.js" type="text/javascript"></script>
<script src="/javascripts/tab-forms.js" type="text/javascript"></script>
<div id="loginForm" class="overlay">
  <a href="javascript:void(0)" class="closebtn" onclick="closeForms()">&times;</a>
  <div class="overlay-content">

    <div class="tab">
      <button class="tablinks" name="signIn" onclick="tabForm(event, 'signIn')">Sign In</button>
      <button class="tablinks" name="signUp" onclick="tabForm(event, 'signUp')">Register</button>
      <button class="tablinks" name="forgotPass" onclick="tabForm(event, 'forgotPass')">Forgot Password?</button>
    </div>

    <div id="signIn" class="tabcontent">
      <div class="form-title">
        <span>EDS Tuition Portal</span>
      </div>
      <form action="/session/new" method="post" id="form-style">
        <input type="text" placeholder="Email or Username" name="username"/>

        <input type="text" placeholder="Password" name="password" type="password"/>

        <button type="submit">LOGIN</button>
      </form>
    </div>

    <div id="signUp" class="tabcontent">
      <div class="form-title">
        <span>EDS Tuition Portal</span>
      </div>
      <form class="form-s" action="/user/new" method="post">

        <input type="text" placeholder="First Name" name="first_name"/>

        <input type="text" placeholder="Last Name" name="last_name"/>

        <input type="email" placeholder="Email" name="email"/>

        <input type="text" placeholder="Username" name="username"/>

        <input type="password" placeholder="Password" name="password"/>

        <input type="password" placeholder="Password Confirmation" name="password_confirmation"/>

        <button type="submit">REGISTER</button>

      </form>
    </div>

    <div id="forgotPass" class="tabcontent">
      <div class="form-title">
        <span>EDS Tuition Portal</span>
      </div>
      <form action="/reset" method="post" id="form-style">
        <input type="text" placeholder="Email" name="email"/>
        <button type="submit" name="RESET PASSWORD">RESET PASSWORD</button>
      </form>
    </div>
  </div>
</div>



<main class="eds__main">
  <left-border class="left__border"></left-border>
  <top-border class="top__border"></top-border>
  <div class="content__space">
    <div class="landing__image"><img src="/images/landing.png" alt="eds landing image"></div>
    <div class="landing__right">
      <div class="landing__ribbon">
        <div id="rib_div_1">
          <div id="rib_div_2"></div>
          <div id="rib_div_3"></div>
          <div id="rib_div_4"></div>
          <div id="rib_div_5">
            <div id="rib_div_6">
              <h5 id="rib_h5">
                <span id="rib_span_1">
                  <span id="rib_span_2">EDS TUITION PORTAL</span>
                </span>
              </h5>
            </div>
          </div>
        </div>
      </div>
      <div class="landing__text">Exeter Day School provides a convenient online payment platform where you can check you current tuition balance, make a payment free of charge with bank transfers.  Also you can schedule upcoming payments or make a quick payment without registering.</div>
      <div class="landing__signin">
        <a href="/sign-in" id="sign_in_link" onclick="openForms(event)" name="signIn">
          <span id="sign_in_span">Sign In</span>
        </a>
      </div>

      <div class="landing__register">
        <a href="/user/new" id="register_link" onclick="openForms(event)" name="signUp">
        <span id="register_span" name="signUp">Register</span>
        </a>
        <p class="message">Forgot your Password? <a href="/reset" id="reset_pass_link" onclick="openForms(event)" name="forgotPass">Reset your password</a></p>
      </div>

      <div class="landing__quickpay">
        <a href="/quickpay" id="quickpay_link">
          <span id="quickpay_span">QuickPay</span>
        </a>
      </div>
    </div>
  </div>
  <right-border class="right__border"></right-border>
  <bottom-border class="bottom__border"></bottom-border>
</main>

