<header class="eds__header">
  <div class="header-container" align="center" style="display:block">
    <h1><span>EXETER</span></h1>
    <img src="./images/eds-logo.png" alt="eds logo">
    <h1><span>DAY SCHOOL</span></h1>
    <p class="logo-title">CIRCLE OF FRIENDS</p>
  </div>
</header>
<div class="eds__top-bar"></div>
<div class="eds__flash">
  <% flash.keys.each do |type| %>
    <div data-alert class="flash <%= type %> alert-box radius">
        <%= flash[type] %>
        <a href="#" class="close">&times;</a>
    </div>
  <% end %>
</div>
<top-border></top-border>

<main class="eds__main">

  <div class="landing">
    <div class="landing__image"><img src="/images/landing.png" alt="eds landing image"></div>
      <div class="landing__ribbon">
        <div id="rib_div_1">
          <div id="rib_div_2"></div>
          <div id="rib_div_3"></div>
          <div id="rib_div_4"></div>
          <div id="rib_div_5">
            <div id="rib_div_6">
              <h5 id="rib_h5">
                <span id="rib_span_1">
                  <span id="rib_span_2">EDS TUITION PORTAL</span>
                </span>
              </h5>
            </div>
          </div>
        </div>
      </div>

    <div class="landing__text">Tuition Portal Landing Text</div>
    <div class="landing__signin">
      <a href="/sign-in" id="sign_in_link">
        <span id="sign_in_span">Sign In</span>
      </a>
    </div>

    <div class="landing__register">
      <a href="/user/new" id="register_link">
        <span id="register_span">Register</span>
      </a>
    </div>

    <div class="landing__quickpay">QUICKPAY BUTTON</div>
  </div>

</main>

<aside class="eds__left"></aside>
<left-border></left-border>
<aside class="eds__right"></aside>
<right-border></right-border>
<bottom-border></bottom-border>
<footer class="eds__footer"></footer>
